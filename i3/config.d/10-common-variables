set $mod Mod4
set $ctrl Control
set $alt Mod1
set $prog_prefix Mod4+Mod1
set $left h
set $down j
set $up k
set $right l

# Keypad codes
# see https://github.com/i3/i3/issues/2558
#
# If using these variables, be sure to use "bindcode"
# instead of "bindsym"
set $numlock Mod2
set $kp1 87
set $kp2 88
set $kp3 89
set $kp4 83
set $kp5 84
set $kp6 85
set $kp7 79
set $kp8 80
set $kp9 81
set $kp0 90
