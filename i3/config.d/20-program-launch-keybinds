# Summonable Apps
bindcode $mod+$kc_2 exec --no-startup-id $DOTFILE_DIR/bin/i3/authy
bindcode $mod+$kc_p exec --no-startup-id $DOTFILE_DIR/bin/i3/keepass


# Program Shortcuts
bindcode $prog_prefix+$kc_Return exec --no-startup-id $DOTFILE_DIR/bin/wrappers/alacritty -e zsh -c '(tmux has-session -t 0 && exec tmux attach-session -t 0) || exec tmux new-session -s 0'
bindcode $prog_prefix+$ctrl+$kc_Return exec --no-startup-id $DOTFILE_DIR/bin/wrappers/alacritty
