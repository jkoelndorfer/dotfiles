# Session Management
bindcode $ctrl+$alt+$kc_l exec --no-startup-id $DOTFILE_DIR/bin/gui/lock-session
bindcode $mod+Shift+$kc_c reload
bindcode $mod+Shift+$kc_r restart


# Window Management & Navigation
bindcode $alt+$kc_Tab exec $DOTFILE_DIR/bin/i3/winfocus
bindcode $alt+Shift+$kc_Tab exec $DOTFILE_DIR/bin/i3/win2curws
bindcode $mod+$kc_w exec $DOTFILE_DIR/bin/i3/wsswitch
bindcode $mod+Shift+$kc_w exec $DOTFILE_DIR/bin/i3/wsmovewin

bindcode $mod+Shift+$kc_q kill

## change focus
bindcode $mod+$left focus left
bindcode $mod+$down focus down
bindcode $mod+$up focus up
bindcode $mod+$right focus right

## move focused window
bindcode $mod+Shift+$left move left
bindcode $mod+Shift+$down move down
bindcode $mod+Shift+$up move up
bindcode $mod+Shift+$right move right

## move workspace
bindcode $mod+$ctrl+Shift+$left move workspace to output left
bindcode $mod+$ctrl+Shift+$down move workspace to output down
bindcode $mod+$ctrl+Shift+$up move workspace to output up
bindcode $mod+$ctrl+Shift+$right move workspace to output right

bindcode $mod+$kc_f fullscreen toggle
bindcode $mod+$kc_Space focus mode_toggle
bindcode $mod+Shift+$kc_Space floating toggle

floating_modifier $mod

## resize mode
mode "resize" {
        bindcode $left  resize shrink width  10 px or 10 ppt
        bindcode $down  resize shrink height 10 px or 10 ppt
        bindcode $up    resize grow   height 10 px or 10 ppt
        bindcode $right resize grow   width  10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindcode $kc_Return mode "default"
        bindcode $kc_Esc    mode "default"
        bindcode $mod+$kc_r mode "default"
}

bindcode $mod+r mode "resize"


# Volume Management
bindcode $kc_XF86AudioRaiseVolume exec --no-startup-id $HOME/dotfiles/bin/audio/pavolup
bindcode $kc_XF86AudioLowerVolume exec --no-startup-id $HOME/dotfiles/bin/audio/pavoldown
bindcode $kc_XF86AudioMute exec --no-startup-id $DOTFILE_DIR/bin/audio/patogglemute


# Media Player
bindcode $kc_XF86AudioPlay exec --no-startup-id playerctl --player=spotify play-pause
bindcode $kc_XF86AudioPause exec --no-startup-id playerctl --player=spotify pause
bindcode $kc_XF86AudioNext exec --no-startup-id playerctl --player=spotify next
bindcode $kc_XF86AudioPrev exec --no-startup-id playerctl --player=spotify previous


# Input Spoofing
bindcode $alt+$kc_x exec --no-startup-id $DOTFILE_DIR/bin/gui/hold-left-click
bindcode $alt+Shift+$kc_e exec --no-startup-id $DOTFILE_DIR/bin/gui/keymash e


# Screenshots
bindcode $kc_Print_Screen exec --no-startup-id $DOTFILE_DIR/bin/gui/screengrab capture-region
bindcode Shift+$kc_Print_Screen exec --no-startup-id $DOTFILE_DIR/bin/gui/screengrab capture-full-screen
bindcode $ctrl+$kc_Print_Screen exec --no-startup-id $DOTFILE_DIR/bin/gui/screengrab-feh


# Launchers
bindcode $prog_prefix+$kc_Space exec $DOTFILE_DIR/bin/launchers/xquicklaunch
bindcode $prog_prefix+$kc_e exec $DOTFILE_DIR/bin/launchers/xquickclip
bindcode $prog_prefix+$kc_i exec $DOTFILE_DIR/bin/launchers/ximgquickclip


# Dunst
bindcode $ctrl+$kc_grave exec dunstctl history-pop
bindcode $ctrl+$kc_Space exec dunstctl close
