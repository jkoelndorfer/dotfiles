# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $ctrl Control
set $alt Mod1
set $prog_prefix Mod4+Mod1
set $left h
set $down j
set $up k
set $right l

# Keypad codes
# see https://github.com/i3/i3/issues/2558
#
# If using these variables, be sure to use "bindcode"
# instead of "bindsym"
set $numlock Mod2
set $kp1 87
set $kp2 88
set $kp3 89
set $kp4 83
set $kp5 84
set $kp6 85
set $kp7 79
set $kp8 80
set $kp9 81
set $kp0 90

font pango:mononoki Nerd Font Mono 8

floating_modifier $mod

exec_always --no-startup-id xrdb -load $DOTFILE_DIR/x11/Xresources
exec_always --no-startup-id xsetroot -cursor_name left_ptr
exec_always --no-startup-id $DOTFILE_DIR/bin/i3/setbg
exec_always --no-startup-id $DOTFILE_DIR/i3/i3helpers  # PRIMARYONLY
exec_always --no-startup-id pgrep -u $USER syncthing || syncthing -no-browser  # PRIMARYONLY

# Program launch keybinds
bindsym $mod+p exec --no-startup-id $DOTFILE_DIR/bin/i3/keepass  # PRIMARYONLY
bindsym $prog_prefix+Return exec --no-startup-id urxvt -e zsh -c '(tmux has-session -t 0 && exec tmux attach-session -t 0) || exec tmux new-session -s 0'
bindsym $prog_prefix+$ctrl+Return exec --no-startup-id urxvt
bindsym $prog_prefix+space exec $DOTFILE_DIR/bin/xquicklaunch
bindsym $prog_prefix+e exec $DOTFILE_DIR/bin/xquickclip  # PRIMARYONLY
bindsym $prog_prefix+i exec $DOTFILE_DIR/bin/ximgquickclip  # PRIMARYONLY
bindsym $prog_prefix+x exec xdotool mousedown 1
bindsym $prog_prefix+c exec xdotool mousedown 3
bindsym $ctrl+$alt+h exec --no-startup-id $DOTFILE_DIR/bin/set-pa-sink steelseries
bindsym $ctrl+$alt+s exec --no-startup-id $DOTFILE_DIR/bin/set-pa-sink pci analog stereo
bindsym $ctrl+$alt+l exec --no-startup-id $DOTFILE_DIR/bin/lockscreen
bindsym $alt+Tab exec $DOTFILE_DIR/bin/i3/winfocus
bindsym $alt+Shift+Tab exec $DOTFILE_DIR/bin/i3/win2curws

bindsym $mod+w exec $DOTFILE_DIR/bin/i3/wsswitch
bindsym $mod+Shift+w exec $DOTFILE_DIR/bin/i3/wsmovewin

# Multimedia control keybinds
bindsym XF86AudioRaiseVolume exec --no-startup-id $HOME/dotfiles/bin/pavolup
bindsym XF86AudioLowerVolume exec --no-startup-id $HOME/dotfiles/bin/pavoldown
bindsym XF86AudioMute exec --no-startup-id $DOTFILE_DIR/bin/patogglemute
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioPause exec --no-startup-id playerctl pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Screenshots
bindsym Print exec --no-startup-id $DOTFILE_DIR/bin/screengrab -s
bindsym Shift+Print exec --no-startup-id $DOTFILE_DIR/bin/screengrab

# kill focused window
bindsym $mod+Shift+q kill

# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# move workspace to another monitor
bindsym $mod+$ctrl+Shift+$left move workspace to output left
bindsym $mod+$ctrl+Shift+$down move workspace to output down
bindsym $mod+$ctrl+Shift+$up move workspace to output up
bindsym $mod+$ctrl+Shift+$right move workspace to output right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left resize shrink width 10 px or 10 ppt
        bindsym $down resize grow height 10 px or 10 ppt
        bindsym $up resize shrink height 10 px or 10 ppt
        bindsym $right resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

mode "floatgrid" {
    bindcode $kp1 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid bottom left; mode "default"
    bindcode $kp2 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid bottom center; mode "default"
    bindcode $kp3 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid bottom right; mode "default"

    bindcode $kp4 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid middle left; mode "default"
    bindcode $kp5 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid middle center; mode "default"
    bindcode $kp6 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid middle right; mode "default"

    bindcode $kp7 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid top left; mode "default"
    bindcode $kp8 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid top center; mode "default"
    bindcode $kp9 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid top right; mode "default"

    bindcode $numlock+$kp1 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid bottom left; mode "default"
    bindcode $numlock+$kp2 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid bottom center; mode "default"
    bindcode $numlock+$kp3 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid bottom right; mode "default"

    bindcode $numlock+$kp4 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid middle left; mode "default"
    bindcode $numlock+$kp5 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid middle center; mode "default"
    bindcode $numlock+$kp6 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid middle right; mode "default"

    bindcode $numlock+$kp7 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid top left; mode "default"
    bindcode $numlock+$kp8 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid top center; mode "default"
    bindcode $numlock+$kp9 exec --no-startup-id $DOTFILE_DIR/bin/i3/floatgrid top right; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+g mode "default"
}

bindsym $mod+r mode "resize"
bindsym $mod+g mode "floatgrid"

# Color Scheme
set_from_resource $base03  i3wm.color8  #000000
set_from_resource $base02  i3wm.color0  #000000
set_from_resource $base01  i3wm.color10 #000000
set_from_resource $base00  i3wm.color11 #000000
set_from_resource $base0   i3wm.color12 #ffffff
set_from_resource $base1   i3wm.color14 #ffffff
set_from_resource $base2   i3wm.color7  #ffffff
set_from_resource $base3   i3wm.color15 #ffffff
set_from_resource $yellow  i3wm.color3  #ffff00
set_from_resource $orange  i3wm.color9  #ff0000
set_from_resource $red     i3wm.color1  #ff0000
set_from_resource $magenta i3wm.color5  #ff0000
set_from_resource $violet  i3wm.color13 #ff0000
set_from_resource $blue    i3wm.color4  #0000ff
set_from_resource $cyan    i3wm.color6  #0000ff
set_from_resource $green   i3wm.color2  #00ff00

# <colorclass>          <border>  <background> <text>   <indicator>  <child_border>
client.focused          $base1    $base01      $base3   $base01      $base1
client.focused_inactive $base02   $base02      $base0   $base02      $base02
client.unfocused        $base02   $base02      $base0   $base02      $base02
client.urgent           $base02   $red         $base3   $base03      $red

default_border pixel 2
default_floating_border pixel 2

# i3-gaps configuration
gaps outer 2
gaps inner 7

# Make Steam windows behave better.
# See:
#
# https://github.com/z3ntu/dotfiles/blob/b061cdf718b36fb8a88e38c11af75bda8728bc2e/i3/.config/i3/config
# https://www.reddit.com/r/i3wm/comments/44tq8c/advice_on_configuring_i3_to_work_well_with_steam/
# https://github.com/ValveSoftware/steam-for-linux/issues/1040
for_window [class="^Steam$" title="^Friends List$"] floating enable
for_window [class="^Steam$" title="Steam - News"] floating enable
for_window [class="^Steam$" title=".* - Chat"] floating enable
for_window [class="^Steam$" title="^Settings$"] floating enable
for_window [class="^Steam$" title=".* - event started"] floating enable
for_window [class="^Steam$" title=".* CD key"] floating enable
for_window [class="^Steam$" title="^Steam - Self Updater$"] floating enable
for_window [class="^Steam$" title="^Screenshot Uploader$"] floating enable
for_window [class="^Steam$" title="^Steam Guard - Computer Authorization Required$"] floating enable
for_window [title="^Steam Keyboard$"] floating enable
