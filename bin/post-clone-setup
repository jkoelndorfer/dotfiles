#!/bin/sh

vimBundle=$HOME/.vim/bundle

function initVim {
	[[ ! -d $vimBundle ]] && mkdir -p $vimBundle
}

function downloadVimSolarizedColorscheme {
	solarizedRepo='git://github.com/altercation/vim-colors-solarized.git'
	cd $vimBundle
	git clone $solarizedRepo
}

initVim
downloadVimSolarizedColorscheme
