#!/bin/bash

if [[ -z "$DISPLAY_PROFILE" ]]; then
    DISPLAY_PROFILE=$("$DOTFILE_DIR/bin/gui/display-profile")
fi

exec /usr/bin/rofi \
    -monitor -4 \
    -matching fuzzy \
    -sort \
    -sorting-method fzf \
    -theme-str "@import \"$DOTFILE_DIR/theme/$DESKTOP_THEME/rofi-colors.rasi\"" \
    -theme-str "@import \"$DOTFILE_DIR/rofi/display-profile-${DISPLAY_PROFILE}.rasi\"" \
    -theme-str "@import \"$DOTFILE_DIR/rofi/theme.rasi\"" \
    -theme "$DOTFILE_DIR/rofi/default.rasi" "$@"
