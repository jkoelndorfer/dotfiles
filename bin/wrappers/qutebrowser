#!/bin/bash

source "$DOTFILE_DIR/theme/$DESKTOP_THEME/colors"
while read e; do
    export $e
done < <(set | grep -E '^COLORSCHEME_[A-Z0-9_]+=' | awk -F= '{ print $1 }')

# Hide Wayland from qutebrowser so that it must use XWayland.
#
# QT doesn't do play well with Wayland, as I am finding out.
unset WAYLAND_DISPLAY
unset XDG_SESSION_TYPE
exec /usr/bin/qutebrowser "$@"
